<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">


    <EditText
        android:id="@+id/txt_bf_from"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="41dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/rectangle_border"
        android:ems="10"
        android:hint="@string/bf_from"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_bf_to"
        app:layout_constraintEnd_toStartOf="@+id/txt_bf_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_bf_to" />

    <EditText
        android:id="@+id/txt_bf_to"
        android:layout_width="0dp"
        android:layout_height="46dp"

        android:layout_marginBottom="23dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_border"
        android:ems="10"
        android:hint="@string/bf_to"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_bf_dates"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_bf_from"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_bf_dates"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/rectangle_border"
        android:ems="10"
        android:hint="@string/bf_dates"
        android:inputType="date"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_bf_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rectangle_border"
        android:padding="10dp"
        android:text="2"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_bf_title1"
        app:layout_constraintStart_toStartOf="@+id/tv_bf_find"
        app:layout_constraintTop_toBottomOf="@+id/tv_bf_title1" />

    <Button
        android:id="@+id/btn_bf_plus"
        android:layout_width="42dp"
        android:layout_height="59dp"
        android:text="@string/bf_plus"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_bf_nums"
        app:layout_constraintStart_toEndOf="@+id/txt_bf_nums" />

    <Button
        android:id="@+id/btn_bf_minus"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/bf_minus"
        android:textSize="20sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_bf_nums"
        app:layout_constraintEnd_toStartOf="@+id/txt_bf_nums"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_bf_find" />

    <TextView
        android:id="@+id/tv_bf_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/bf_passengers"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bf_title2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_bf_title2" />

    <TextView
        android:id="@+id/tv_bf_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="33dp"
        android:text="@string/bf_showpricein"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tv_bf_money"
        app:layout_constraintTop_toBottomOf="@+id/txt_bf_dates" />

    <TextView
        android:id="@+id/tv_bf_miles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/rectangle_border"
        android:padding="10dp"
        android:text="@string/bf_miles"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_bf_money"
        app:layout_constraintEnd_toEndOf="@+id/tv_bf_find" />

    <TextView
        android:id="@+id/tv_bf_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="95dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_border"
        android:padding="10dp"
        android:text="@string/bf_money"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_bf_find"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toEndOf="@+id/btn_bf_minus"
        app:layout_constraintTop_toBottomOf="@+id/tv_bf_title2" />

    <TextView
        android:id="@+id/tv_bf_find"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_red_dark"
        android:text="@string/bf_findflights"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bf_plus"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>